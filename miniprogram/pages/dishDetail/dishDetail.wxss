/* miniprogram/pages/dishDetail/dishDetail.wxss */

input, textarea {
  border: 1rpx solid green;
  border-radius: 12rpx;
  width: inherit;
  padding: 10rpx;
}

view {
  padding: 10rpx;
}

.tableRow, .item {
  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content: center; */
}

.item {
  width: 20%;
  margin: 0rpx 0rpx 0rpx 10rpx;
}

.item_name {
  width: 100%;
  font-size: 30rpx;
  padding: 10rpx;
}

.unbind_icon {
  width: 35rpx;
  height: 35rpx;
}

.item_stock {
  border: 1rpx solid green;
  border-radius: 12rpx;
  background-color: green;
  color: white;
}

.item_out_of_stock {
  border: 1rpx solid red;
  border-radius: 12rpx;
  background-color: red;
  color: white;
}
