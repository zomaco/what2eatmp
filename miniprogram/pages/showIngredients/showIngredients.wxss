/* pages/showIngredients/showIngredients.wxss */

.table {
  border: 0px solid darkgray;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}

.td {
  width: 40%;
  justify-content: center;
  text-align: center;
}

.bg-w {
  background: snow;
}

.bg-g {
  background: #e6f3f9;
}

.th {
  width: 40%;
  justify-content: center;
  background: #36f;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
  flex: auto;
}

.buttonRow {
  display: flex;
  flex-direction: row;
}

.buttonDelete {
  border: 1rpx solid green;
  border-radius: 10rpx;
  padding: 10rpx;
  margin: 5rpx;
  background-color: #eee;
}

.listItem {
  border: 1rpx solid green;
  padding: 10rpx;
  margin-bottom: 10rpx;
}

.center {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

