/**index.wxss**/

page {
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.functions {
  margin-top: 140rpx;
  /* border: 1px solid black; */
}

.function_row {
  background: white;
  /* border: 1px solid black; */
  display: flex;
  flex-direction: row;
  transition: all 300ms ease;
  align-items: center;
  justify-content: center;
}

.function_cell {
  background: white;
  /* border: 1px solid black; */
  transition: all 300ms ease;
  font-size: 28rpx;
  margin: 10rpx 10rpx 10rpx 10rpx;
}

.icon {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid black;
  box-shadow: 15rpx 15rpx 10rpx #888888;
}

.icon_text {
  line-height: 55rpx;
  color: green;
  text-align: center;
}
